<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/powerBCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power_bcr"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_bcr"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/powerBCR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unregisterPower"
        />

    <Button
        android:id="@+id/unregisterPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregister_bcr"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/registerPower"
        app:layout_constraintTop_toBottomOf="@id/powerBCR"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/networkBCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_bcr"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerPower" />

    <Button
        android:id="@+id/registerNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_bcr"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/networkBCR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unregisterPower"
        />

    <Button
        android:id="@+id/unregisterNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unregister_bcr"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/registerPower"
        app:layout_constraintTop_toBottomOf="@id/networkBCR"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>